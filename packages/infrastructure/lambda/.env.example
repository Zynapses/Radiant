# RADIANT Lambda Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/radiant
DATABASE_SECRET_ARN=arn:aws:secretsmanager:us-east-1:123456789:secret:radiant/database

# =============================================================================
# AWS RESOURCES
# =============================================================================
# DynamoDB Tables
AUDIT_TABLE=radiant-audit-logs
CACHE_TABLE=radiant-cache
RATE_LIMIT_TABLE=radiant-rate-limits

# S3 Buckets
MEDIA_BUCKET=radiant-media
AUDIO_BUCKET=radiant-audio
AUDIT_BUCKET=radiant-audit-archive

# SNS Topics
COST_ALERT_TOPIC_ARN=arn:aws:sns:us-east-1:123456789:radiant-cost-alerts
THERMAL_NOTIFICATIONS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789:radiant-thermal

# Lambda ARNs
SCHEDULER_LAMBDA_ARN=arn:aws:lambda:us-east-1:123456789:function:radiant-scheduler

# =============================================================================
# AI SERVICES
# =============================================================================
AI_SERVICE_URL=http://localhost:4000
AI_SERVICE_API_KEY=
LITELLM_ENDPOINT=http://localhost:4000
LITELLM_API_KEY=

# External AI Provider Keys (stored in Secrets Manager in production)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
ELEVENLABS_API_KEY=

# =============================================================================
# EMAIL & NOTIFICATIONS
# =============================================================================
FROM_EMAIL=noreply@yourdomain.com
ALERT_FROM_EMAIL=alerts@yourdomain.com

# =============================================================================
# APPLICATION
# =============================================================================
APP_ID=radiant
APP_URL=https://app.yourdomain.com
RADIANT_API_URL=https://api.yourdomain.com
API_BASE_URL=https://api.yourdomain.com
ENVIRONMENT=development
NODE_ENV=development
LOG_LEVEL=info

# =============================================================================
# AUTHENTICATION
# =============================================================================
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
JWT_SECRET=your-jwt-secret-key

# =============================================================================
# BILLING (Optional)
# =============================================================================
STRIPE_SECRET_ARN=arn:aws:secretsmanager:us-east-1:123456789:secret:radiant/stripe

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_THERMAL_MANAGEMENT=true
ENABLE_COST_ALERTS=true
ENABLE_AUDIT_LOGGING=true
