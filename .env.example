# RADIANT Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
AWS_PROFILE=radiant-dev

# =============================================================================
# Database Configuration
# =============================================================================
DB_CLUSTER_ARN=arn:aws:rds:us-east-1:123456789012:cluster:radiant-dev
DB_SECRET_ARN=arn:aws:secretsmanager:us-east-1:123456789012:secret:radiant-dev-db
DB_NAME=radiant

# For local development with PostgreSQL
LOCAL_DB_HOST=localhost
LOCAL_DB_PORT=5432
LOCAL_DB_USER=radiant
LOCAL_DB_PASSWORD=radiant_dev_password
LOCAL_DB_NAME=radiant_dev

# =============================================================================
# Cognito Configuration
# =============================================================================
COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_ADMIN_POOL_ID=us-east-1_YYYYYYYYY
COGNITO_ADMIN_CLIENT_ID=yyyyyyyyyyyyyyyyyyyyyyyyyy

# =============================================================================
# API Configuration
# =============================================================================
API_GATEWAY_URL=https://api.radiant.example.com
ADMIN_API_URL=https://admin-api.radiant.example.com

# =============================================================================
# S3 Configuration
# =============================================================================
S3_BUCKET_NAME=radiant-storage-dev
S3_REGION=us-east-1

# =============================================================================
# AI Provider API Keys (for development only - use Secrets Manager in production)
# =============================================================================
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_API_KEY=...
MISTRAL_API_KEY=...

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_SELF_HOSTED_MODELS=false
ENABLE_HIPAA_COMPLIANCE=false
ENABLE_MULTI_REGION=false

# =============================================================================
# Development Settings
# =============================================================================
NODE_ENV=development
LOG_LEVEL=debug
ENABLE_DEBUG_ENDPOINTS=true

# =============================================================================
# Admin Dashboard
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME=RADIANT Admin
NEXT_PUBLIC_VERSION=4.17.0
