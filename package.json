{
  "name": "radiant",
  "version": "4.18.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "functions/*"
  ],
  "scripts": {
    "build": "pnpm -r build && npm run docs:generate",
    "build:shared": "cd packages/shared && pnpm build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "pnpm -r lint",
    "docs:generate": "node scripts/generate-docs.js",
    "deploy:dev": "cd packages/infrastructure && cdk deploy --all --context environment=dev",
    "deploy:staging": "cd packages/infrastructure && cdk deploy --all --context environment=staging",
    "deploy:prod": "cd packages/infrastructure && cdk deploy --all --context environment=prod --require-approval broadening",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.2.0",
    "@vitest/ui": "^1.2.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.swift": [
      "swiftformat --lint"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
